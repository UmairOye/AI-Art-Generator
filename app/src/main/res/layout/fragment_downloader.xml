<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.adapters.ui.fragments.Downloader">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_margin="@dimen/_8sdp"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_2sdp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/outputImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/output"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/download"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="16dp"
        android:text="@string/download"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/CardImage"
        app:layout_constraintStart_toStartOf="@+id/CardImage"
        app:layout_constraintTop_toBottomOf="@+id/CardImage" />

</androidx.constraintlayout.widget.ConstraintLayout>